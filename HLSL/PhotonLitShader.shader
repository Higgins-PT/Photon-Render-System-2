            [shader("closesthit")]
            void ClosestHitMain(
                inout RayPayload payload : SV_RayPayload,
                AttributeData attribs    : SV_IntersectionAttributes)
            {
                float3 hitPos = WorldRayOrigin() + WorldRayDirection() * RayTCurrent();
                float2 uv;
                float4x4 instanceMatrix;
                float3x3 normalMatrix;
                float3 localNormal = SampleInterpolatedNormal(
                    InstanceID(),
                    PrimitiveIndex(),
                    attribs.barycentrics,
                    uv,
                    instanceMatrix,
                    normalMatrix
                );
                float3 normalDir = TransformNormal(localNormal, normalMatrix);

                float3x3 TBN = float3x3(0, 0, 0, 0, 0, 0, 0, 0, 0);
                TBN[2] = normalDir;
                float3 up = abs(normalDir.y) < 0.999f ? float3(0, 1, 0) : float3(1, 0, 0);
                TBN[0] = normalize(cross(up, normalDir));
                TBN[1] = cross(normalDir, TBN[0]);
                
                // Sample normal map using SampleLevel
                float3 tangentNormal = float3(0, 0, 1);
                #ifdef _NORMALMAP
                float2 normalUV = uv * _BaseMap_ST.xy + _BaseMap_ST.zw;
                half4 n = _BumpMap.SampleLevel(sampler_BumpMap, normalUV, 0);
                #ifdef UNITY_NO_DXT5nm
                tangentNormal = normalize(n.xyz * 2.0 - 1.0);
                #else
                tangentNormal.xy = n.wy * 2.0 - 1.0;
                tangentNormal.z = sqrt(saturate(1.0 - dot(tangentNormal.xy, tangentNormal.xy)));
                #endif
                tangentNormal.xy *= _BumpScale;
                tangentNormal = normalize(tangentNormal);
                #endif

                // Sample albedo using SampleLevel
                float2 baseUV = uv * _BaseMap_ST.xy + _BaseMap_ST.zw;
                half4 albedoAlpha = _BaseMap.SampleLevel(sampler_BaseMap, baseUV, 0);
                float3 baseColor = albedoAlpha.rgb * _BaseColor.rgb;
                float alpha = albedoAlpha.a * _BaseColor.a;

                // Sample specular and metallic maps
                half4 specMapSample = _SpecGlossMap.SampleLevel(sampler_SpecGlossMap, baseUV, 0);
                half4 metallicMapSample = _MetallicGlossMap.SampleLevel(sampler_MetallicGlossMap, baseUV, 0);

                float smoothnessSample = _Smoothness;
                #ifdef _SMOOTHNESS_TEXTURE_ALBEDO_CHANNEL_A
                smoothnessSample = albedoAlpha.a * _Smoothness;
                #else
                #ifdef _SPECULAR_SETUP
                smoothnessSample = specMapSample.a * _Smoothness;
                #else
                smoothnessSample = metallicMapSample.a * _Smoothness;
                #endif
                #endif

                float3 specularPayload = _SpecColor.rgb * specMapSample.rgb;
                float metallicPayload = _Metallic * metallicMapSample.r;

                #if defined(_DETAIL_MULX2) || defined(_DETAIL_SCALED)
                half detailMask = _DetailMask.SampleLevel(sampler_DetailMask, baseUV, 0).a;
                float2 detailUV = baseUV * _DetailAlbedoMap_ST.xy + _DetailAlbedoMap_ST.zw;

                half3 detailAlbedo = _DetailAlbedoMap.SampleLevel(sampler_DetailAlbedoMap, detailUV, 0).rgb;
                #if defined(_DETAIL_SCALED)
                detailAlbedo = ScaleDetailAlbedo(detailAlbedo, _DetailAlbedoMapScale);
                #else
                detailAlbedo *= 2.0h;
                #endif
                baseColor *= lerp(1.0, (float3)detailAlbedo, detailMask);

                #ifdef BUMP_SCALE_NOT_SUPPORTED
                half3 detailNormalTS = UnpackNormal(_DetailNormalMap.SampleLevel(sampler_DetailNormalMap, detailUV, 0));
                #else
                half3 detailNormalTS = UnpackNormalScale(_DetailNormalMap.SampleLevel(sampler_DetailNormalMap, detailUV, 0), _DetailNormalMapScale);
                #endif
                detailNormalTS = normalize(detailNormalTS);
                tangentNormal = normalize(lerp(tangentNormal, BlendNormalRNM(tangentNormal, detailNormalTS), detailMask));
                #endif

                normalDir = normalize(mul(tangentNormal, TBN));
                
                // Sample occlusion using SampleLevel
                float aoSample = 1.0;
                #ifdef _OCCLUSIONMAP
                float2 occlusionUV = uv * _BaseMap_ST.xy + _BaseMap_ST.zw;
                #if defined(SHADER_API_GLES)
                aoSample = _OcclusionMap.SampleLevel(sampler_OcclusionMap, occlusionUV, 0).g;
                #else
                half occ = _OcclusionMap.SampleLevel(sampler_OcclusionMap, occlusionUV, 0).g;
                aoSample = lerp(1.0, occ, _OcclusionStrength);
                #endif
                #endif
                baseColor *= aoSample;

                // Sample emission using SampleLevel
                float3 emission = float3(0,0,0);
                #ifdef _EMISSION
                float2 emissionUV = uv * _BaseMap_ST.xy + _BaseMap_ST.zw;
                float3 emissionSample = _EmissionMap.SampleLevel(sampler_EmissionMap, emissionUV, 0).rgb;
                emission = emissionSample * _EmissionColor.rgb;
                #endif
                float transparency = saturate(1 - alpha);
                float anisotropy = clamp(_Anisotropy, -1, 1);
                float iorValue = clamp(_Ior, 1.0f, 3.0f);
                float mainLightVisibility = 0.0f;
                float4 shadowCoord = TransformWorldToShadowCoord(hitPos);
                mainLightVisibility = MainLightRealtimeShadow(shadowCoord);
                payload.mainLight = mainLightVisibility > 0.1f ? 1 : 0;

                payload.hitPosition = hitPos;
                payload.hitNormal = normalDir;
                payload.rayDir = WorldRayDirection();
                payload.hit = 1;
                payload.emission = emission;
                payload.baseColor = baseColor;
                payload.throughput = baseColor;
                payload.specularColor = saturate(specularPayload);
                payload.metallic = saturate(metallicPayload);
                payload.smoothness = 1 - pow(1 - smoothnessSample, 2);
                payload.anisotropy = anisotropy;
                payload.transparency = transparency;
                payload.ior = iorValue;
            }

